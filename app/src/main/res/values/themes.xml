<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeGroove" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">#DF4242</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:text">Загрузка...</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">30</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Theme.RecipeGroove" parent="Base.Theme.RecipeGroove" />

    <style name="TextTabLayoutHome" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabLayout">
        <item name="tabMode">fixed</item>
<!--        <item name="tabIndicator">@drawable/background_tab_indicator</item>-->
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tabTextAppearance">@style/TextTabLayoutProfile</item>
        <item name="tabTextColor">#A6000000</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="TextTabLayoutProfile" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>