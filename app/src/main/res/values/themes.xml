<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeGroove" parent="Theme.Material3.Light">

        <item name="android:statusBarColor">@color/red</item>

    </style>

    <style name="sw_bottom_menu">
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="Theme.RecipeGroove" parent="Base.Theme.RecipeGroove" />

    <style name="TextTabLayoutHome" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tabTextAppearance">@style/TextTabLayoutProfile</item>
        <item name="tabTextColor">#A6000000</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="TextTabLayoutProfile" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>